
@{
    ViewBag.Title = "Izbira letnika za urejanje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Izbira letnika za urejanje</h2>

<br />
<p>Študent: @ViewBag.student.ime @ViewBag.student.priimek - @ViewBag.student.vpisnaStevilka</p>

@if (@ViewBag.Stevilo > 0)
{
    <table>
        <thead>
            <tr>
                <th>Študijsko leto</th>
                <th>Program</th>
                <th>Letnik</th>
                <th>Vrsta vpisa</th>
                <th>Uredi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in @ViewBag.vpisni)
            {
                var letnik = v.studijskoLeto + 1;
                <tr>
                    <td>@v.studijskoLeto/@letnik</td>
                    <td>@v.sifrant_studijskiprogram.naziv</td>
                    <td>@v.letnikStudija</td>
                    <td>@v.sifrant_vrstavpisa.naziv</td>
                    @if (v.letnikStudija == 2)
                    {
                        <td>
                            <a href="~/VpisniList/UrediPredmetnik2/@v.id">Uredi</a>
                        </td>
                    }
                    else if (v.letnikStudija == 3)
                    {
                        <td>
                            <a href="~/VpisniList/UrediPredmetnik3/@v.id">Uredi</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p style="color:red;">Študent nima izpolnjenega vpisnega lista za 2. ali 3. letnik!</p>
}
