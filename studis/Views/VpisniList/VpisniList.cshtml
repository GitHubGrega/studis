    <label for="vrstaStudija">Vrsta študija</label>
        <select name="vrstaStudija">

        </select>
    <label for="vrstaVpisa">Vrsta vpisa</label>
        <select name="vrstaVpisa">

        </select>
    <label for="letnikStudija">Letnik študija</label>
        <select name="letnikVpisa">

        </select>
    <label for="nacinStudija">Način študija</label>
        <select name="nacinStudija">
            <option value="1">1 - redni</option>
            <option value="3">3 - izredni</option>
        </select>
    <label for="oblikaStudija">Oblika študija</label>
        <select name="oblikaStudija">
            <option value="1">1 - na lokaciji</option>
            <option value="2">2 - na daljavo</option>
            <option value="3">3 - e-studij</option>
        </select>
    <label for="letoPrvegaVpisa">Študijsko leto prevega vpisa v ta program</label>
        <select name="letoPrvegaVpisa">

        </select>
    <label for="soglasje1">Soglasje 1</label>
        <input type="checkbox" name="soglasje1" id="soglasje1">
    <label for="soglasje2">Soglasje 2</label>
        <input type="checkbox" name="soglasje2" id="soglasje2">
    
    <h4>Priloga 1: Predmetnik</h4>

    <input type="submit" value="Shrani" >
</form>
