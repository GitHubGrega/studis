@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PdfLayout.cshtml";
    var imagePath = Server.MapPath("~/Content/images");
}

@model studis.Models.VpisniListModel

<img class="displayed" src="@imagePath\fri.png" alt="fri logo" /><br />

